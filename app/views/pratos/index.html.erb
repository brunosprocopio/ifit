<p id="notice"><%= notice %></p>

<h1>Listing Pratos</h1>

<table>
  <thead>
    <tr>
      <th>Pratos</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <%= form_tag(controller: "pratos", action: "lista_pratos", method: "get") do |f| %>
      <%= check_box_tag(:alema) %>
      <%= label_tag(:alema, "alema") %>
      <%= check_box_tag(:arabe) %>
      <%= label_tag(:arabe, "arabe") %>
      <%= check_box_tag(:asiatica) %>
      <%= label_tag(:asiatica, "asiatica") %>
      <%= check_box_tag(:brasileira) %>
      <%= label_tag(:brasileira, "brasileira") %>
      <%= check_box_tag(:chinesa) %>
      <%= label_tag(:chinesa, "chinesa") %>
      <%= check_box_tag(:francesa) %>
      <%= label_tag(:francesa, "francesa") %>
      <%= check_box_tag(:indiana) %>
      <%= label_tag(:indiana, "indiana") %>
      <%= check_box_tag(:italiana) %>
      <%= label_tag(:italiana, "italiana") %>
      <%= check_box_tag(:japonesa) %>
      <%= label_tag(:japonesa, "japonesa") %>
      <%= check_box_tag(:mediterraneo) %>
      <%= label_tag(:mediterraneo, "mediterraneo") %>
      <%= check_box_tag(:mexicana) %>
      <%= label_tag(:mexicana, "mexicana") %>
      <%= check_box_tag(:portuguesa) %>
      <%= label_tag(:portuguesa, "portuguesa") %>
      <%= check_box_tag(:tailandesa) %>
      <%= label_tag(:tailandesa, "tailandesa") %>
      <%= check_box_tag(:prato_definido) %>
      <%= label_tag(:prato_definido, "Prato Pré Definido") %>
      <%= check_box_tag(:prato_ndefinido) %>
      <%= label_tag(:prato_ndefinido, "Prato Montável") %>
      <%= submit_tag("Filtrar") %>
  <% end %>

  <tbody>
    <% @pratos.each do |pr| %>
        <tr>
          <li><%=link_to "Prato #{pr.id}", pr %></li>
        </tr>
    <% end %>
  </tbody>
</table>

